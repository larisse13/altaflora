extends maparea/layout
block content
    .container-fluid
        .row
            .col-md-6.col-md-offset-3
                .jumbotron
                    form.form-horizontal(role="form", action='login', method='POST')
                        | {% csrf_token %}
                        .form-group
                            label.col-sm-2.control-label(for="inputUser") Usu√°rio
                            .col-sm-10
                                input.form-control#inputUser(name='username')
                        .form-group
                            label.col-sm-2.control-label(for="inputPass") Senha
                            .col-sm-10
                                input.form-control#inputPass(name='password', type="password")
                        .form-group
                            .col-sm-offset-2.col-sm-10
                                button.btn.btn-info(type="submit") Entrar
